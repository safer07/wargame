---
import propertyLabels from "../scripts/propertyLabels.js";
const { property } = Astro.props;
const propertyLabel = propertyLabels[property];
---

<li
    class="group w-[calc(100vw-2rem-1.125rem)] h-[92px]"
    data-property={property}
>
    <div
        class="w-max px-1 pt-2 relative left-0 flex gap-1 select-none [&:has([data-visible=true])>div]:block"
    >
        <button class="text-gray-400">{propertyLabel}</button>
        <div
            class="w-3 h-3 hidden group-hover:block group-[[data-direction]]:block bg-[url('/img/icons/descending.svg')] group-[[data-direction='ascending']]:bg-[url('/img/icons/ascending.svg')] cursor-pointer opacity-50 hover:opacity-100 group-[[data-direction]]:opacity-100"
            aria-hidden="true"
        >
        </div>
        <div
            class="filter w-3 h-3 relative hidden group-hover:block [&:has([data-visible=true])]:block [&:has([data-visible=true])>button]:opacity-100"
        >
            <button
                class="w-3 h-3 bg-[url('/img/icons/filter.svg')] opacity-50 hover:opacity-100"
            ></button>
            <form
                class="w-32 max-h-[512px] overflow-hidden absolute left-4 z-20 flex flex-col gap-3 bg-slate-800/75 backdrop-blur-sm rounded-lg data-[visible=false]:hidden"
                data-visible="false"
            >
            </form>
        </div>
    </div>
</li>
