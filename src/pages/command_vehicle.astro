---
import Layout from "../layouts/Layout.astro";
const pageTitle = "КП: транспорт";
const commandArmor = await Astro.glob(
	"../content/vehicle/command_armor/*/*.md"
);
const commandVehicle = await Astro.glob(
	"../content/vehicle/command_vehicle/*/*.md"
);
const allItems = [...commandArmor, ...commandVehicle];
const categories = [
	"info",
	"body",
	"main_gun",
	"atgm",
	"autocannon",
	"mmg",
	"mmg2",
];
---

<Layout pageTitle={pageTitle} allItems={allItems} categories={categories} />
